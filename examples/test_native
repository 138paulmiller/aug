func fibonacci(a) {
    if a < 2 { 
        return a; 
    }
    return fibonacci(a-1) + fibonacci(a-2);
}

func count(a) {
    if a <= 0 { 
        return 0; 
    }
    return count(a-1) + 1;
}

var a = 1;
a += 1;
expect( a == 2, " a += 1 = ", a);

a -= -1;
expect( a == 3, " a -= 3 = ", a);

a *= 2;
expect( a == 6, " a *= 2 = ", a);

a /= 2;
expect( a ~= 3, " a /= 2 = ", a);

a ^= 2;
expect( a == 9, " a ^= 3 = ", a);

a %= 2;
expect( a == 1, " a %= 2 = ", a);