#/bin/sh
clear 

# Build the libs
cd libtest
make clean 
make
cd .. 

# Build the test/dump
make clean 
if [ "$1" == "-dbg" ]; then
    make DEBUG=1
    shift;
else 
    make
fi;

# Copy libs to runtime dir
yes | cp -rf libtest/lib/. ../build
cd ../build

# exec
if [ "$1" == "-all" ]; then

    valgrind  --main-stacksize=1048576 --tool=memcheck --leak-check=full --show-leak-kinds=all \
    ./aug_test --test_all $(ls ../examples/test_*)
else 
    valgrind  --main-stacksize=1048576 --tool=memcheck --leak-check=full --show-leak-kinds=all \
    ./aug_test --dump --verbose --test ../examples/$1

fi;

